<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.agh.iaeste.praktykator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="pl.edu.agh.iaste.praktykator.MAINACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>S
        </activity>
        <activity android:name=".Menu" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="pl.edu.agh.iaeste.praktykator.MENU"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".Splash" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <uses-permission android:name="android.permission.INTERNET" />
    </application>

</manifest>
